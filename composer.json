{
    "name": "herodsoft/ci-forms",
    "description": "Simple library to create forms more fast and easy using Codeigniter 4",
    "type": "library",
    "require": {
        "php": ">=7.4",
        "symfony/string": "^5.2"

    },
    "license": "MIT",
    "authors": [
        {
            "name": "hdrodriguez",
            "email": "herodsoft@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "autoload": {
        "psr-4": {
            "Forms\\CI\\": "src/"
        }
    },
    "prefer-stable": true,
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require-dev": {
        "codeigniter4/framework": ">=v4.3.4",
        "phpunit/phpunit": "^8.5"
    }
}
